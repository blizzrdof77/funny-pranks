}


/* -----------------------------------------------------------------------------
 * - Pranks List ---------------------------------------------------------------
 * -------------------------------------------------------------------------- */

.pranks {
    width: 100%;
    padding: 0.5em;
    border: 0;
    position: relative;
}

.pranks tr.odd {
    background-color: #f2f2f2;
}

.pranks tr.even {
    background-color: inherit;
}

.pranks td {
    padding: 0.2em;
    border: none;
}

.pranks .icon {
    width: 84px;
}

.pranks .icon img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    border: none;
    /* specify the width/height so the dimensions don't change as a picture
       loads in */
    width: 80px;
    height: 80px;
}

.pranks .name {
    padding-left: 1em;
    width: 60%;
}

.pranks .name a {
    font-size: 125%;
    color: #777;
    font-weight: bold;
}

.pranks .links {
    padding-right: 0.5em;
    padding-bottom: 0.5em;
    white-space: nowrap;
    vertical-align: bottom;
    text-align: right;
    font-size: 90%;
    color: #bbb;
}

#prankListNavigation {
    padding-top: 0.5em;
    font-size: 110%;
}

#prankListNavigation a {
    margin-left: 0.75em;
}
